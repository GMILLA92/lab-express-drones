<h2>Available drones</h2>

{{#each dbDrones}}
    <h3>Name of the drone: {{this.name}}</h3>
    <h3>Propellers: {{this.propellers}}</h3>
    <h3>MaxSpeed: {{this.maxSpeed}}</h3>
    <a href="/drones/{{this._id}}/edit">EDIT this drone!</a>
    <form action="/drones/{{this._id}}/delete" method="POST">
    <button>DELETE this drone!</button>
  </form>
{{/each}}

